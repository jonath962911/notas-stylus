@import "_variables.styl"

mixin-max-width()
	width: 800px
	margin: 0 auto;

.pseudoelement
	font-size: font-size-normal
	width: 300px
	&:before
		content "Hola Mundo!"
	.ie-8 &
		&:before
			content: 'Good Bye'

body
	background teal
	font-size: .9em	
	.primerhijo
		font-size: font-size-small
		margin-bottom: 24px
	> .primerhijo
		padding: font-size-normal - font-size-small
		
.btn
	border-radius: 5px
	&--alert
		background: red
		

.section
	mixin-max-width()

.article
	mixin-max-width()